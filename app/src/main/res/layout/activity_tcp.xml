<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="leesoo.com.nettcp_tool.TCPActivity">

    <TextView
        android:id="@+id/rxtv"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:text="接收区" />

    <LinearLayout
        android:id="@+id/conll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rxtv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iptextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="IP地址" />

        <EditText
            android:id="@+id/ipaddeditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="phone"
            android:text="192.168.1.77" />

        <TextView
            android:id="@+id/netporttextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="远程端口" />

        <EditText
            android:id="@+id/porteditText2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="phone"
            android:text="6699" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接" />
    </LinearLayout>

    <EditText
        android:id="@+id/sendetv"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@id/conll"
        android:ems="10"
        android:hint="发送内容"
        android:inputType="textPersonName"
        android:onClick="connectip"
        android:text="Name" />

</RelativeLayout>
